<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="job_application_form_inherit" name="Job Application Form"
              inherit_id="website_hr_recruitment.apply">
        <xpath expr="//div[hasclass('s_website_form_rows')]/div[4]" position="after">
            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="citizenship">
                        <span class="s_website_form_label_content">Nationality</span>
                    </label>
                    <div class="col-sm">
                        <select id="citizenship" class="form-control s_website_form_input" name="citizenship" required="true">
                            <option value="SA">South African</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>
            </div>
            <div id="id_number_field" style="display: none;">
                <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="id_number">
                            <span class="s_website_form_label_content">ID Number (SA)</span>
                        </label>
                        <div class="col-sm">
                            <input type="text" id="id_number" class="form-control s_website_form_input" name="id_no" maxlength="13" required="true"/>
                        </div>
                    </div>
                </div>
            </div>

            <div id="passport_field">
                <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="passport">
                            <span class="s_website_form_label_content">Passport (Non-SA)</span>
                        </label>
                        <div class="col-sm">
                            <input type="text" id="passport" class="form-control s_website_form_input" name="passport"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field"
                data-type="number" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="how_many_years_of_experience">
                        <span class="s_website_form_label_content">How Many years of experience</span>
                    </label>
                    <div class="col-sm">
                        <input id="how_many_years_of_experience" type="number"
                            class="form-control s_website_form_input" max="10" min="1"
                            name="how_many_years_of_experience" required=""
                            data-fill-with="how_many_years_of_experience"/>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field"
                data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="location">
                        <span class="s_website_form_label_content">Location</span>
                    </label>
                    <div class="col-sm">
                        <input id="location" type="text"
                            class="form-control s_website_form_input"
                            name="location"
                            data-fill-with="location"/>
                    </div>
                </div>
            </div>

            <!--<div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="mode_of_work">
                        <span class="s_website_form_label_content">Mode of Work</span>
                    </label>
                    <div class="col-sm">
                        <select id="mode_of_work" class="form-control s_website_form_input" name="mode_of_work" required="">
                            <option value="ST">Onsite</option>
                            <option value="OB">Office</option>
                            <option value="both">Both</option>
                        </select>
                    </div>
                </div>
            </div>-->

            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="criminal_record">
                        <span class="s_website_form_label_content">Crimininal Record</span>
                    </label>
                    <div class="col-sm">
                        <select id="criminal_record" class="form-control s_website_form_input" name="criminal_record" required="">
                            <option value="Y">Yes</option>
                            <option value="N">No</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="crime_info_div">
                <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="crime_info">
                            <span class="s_website_form_label_content">Criminal Record Details</span>
                        </label>
                        <div class="col-sm">
                            <input type="text" id="crime_info" class="form-control s_website_form_input" name="crime_info"/>
                        </div>
                    </div>
                </div>
            </div>





            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="disability">
                        <span class="s_website_form_label_content">Disability</span>
                    </label>
                    <div class="col-sm">
                        <select id="disability" class="form-control s_website_form_input" name="disability" onchange="showDisabilityDetails()">
                            <option value="Y">Yes</option>
                            <option value="N">No</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="disability_details_field">
                <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="disability_details">
                            <span class="s_website_form_label_content">Disability Details</span>
                        </label>
                        <div class="col-sm">
                            <input type="text" id="disability_details" class="form-control s_website_form_input" name="disability_type"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="gender">
                        <span class="s_website_form_label_content">Gender</span>
                    </label>
                    <div class="col-sm">
                        <select id="gender" class="form-control s_website_form_input" name="gender" required="true">
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="current_rate">
                        <span class="s_website_form_label_content">Current Rate</span>
                    </label>
                    <div class="col-sm">
                        <input type="text" id="current_rate" class="form-control s_website_form_input" name="current_rate" value="R15000" required=""/>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="expected_rate">
                        <span class="s_website_form_label_content">Expected Rate</span>
                    </label>
                    <div class="col-sm">
                        <input type="text" id="expected_rate" class="form-control s_website_form_input" name="expected_rate" value="R20000" required=""/>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-0 py-2 s_website_form_field" data-type="char" data-name="Field">
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="notice_period">
                        <span class="s_website_form_label_content">Notice Period</span>
                    </label>
                    <div class="col-sm">
                        <input type="text" id="notice_period" class="form-control s_website_form_input" name="notice_period" value="15 days" required=""/>
                    </div>
                </div>
            </div>

        </xpath>

    </template>
</odoo>